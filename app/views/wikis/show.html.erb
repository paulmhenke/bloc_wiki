<div class='row'>
  <div class='col-md-10'>
    <h1><%= markdown_to_html @wiki.title %></h1>
    <p><%= markdown_to_html @wiki.body %></p> 
  </div>

  <div class='col-md-2'>
    <%= link_to "Edit this entry", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <%= link_to 'Delete this entry', [@wiki], method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure you want to delete this Entry?" } %>
  </div>
</div>
