<h1><%= @user.name %>'s Account</h1>

<div class="row">
  <div class="col-md-8">
    <ul>
    Email Address: <%= @user.email %>
    Wikis Created: <%= @wikis.count %>
    Account Plan: <%= @user.role %>
    </ul>
  </div>
  
  <div class='col-md-4'>
    <% if @user.role == "standard" %>
      <%= link_to "Upgrade your Account", new_charge_path, class: 'btn btn-success' %>
    <% else %>
      <%= link_to "Cancel Premium Access", charge_path(current_user), method: :delete, class: 'btn btn-danger',
          data: { confirm: "Your Private Wikis will be made Public if you cancel. Are you sure you want to cancel?" } %>
    <% end %>
  </div>
</div>